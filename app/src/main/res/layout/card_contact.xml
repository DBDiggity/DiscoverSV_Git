<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background_inverted"
    android:padding="10dp"
    android:paddingEnd="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contact_title"
        android:textSize="15dp"
        android:text="Name"/>

    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/contact_title"
        android:background="@android:color/darker_gray"
        android:layout_margin="@dimen/home_margin_intersect"
        android:id="@+id/contact_line"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_address"
            android:textSize="15dp"
            android:text="Address"
            android:layout_below="@id/contact_line"
            android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contact_seats"
        android:textSize="15dp"
        android:layout_below="@id/contact_address"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call_icon"
            android:id="@+id/contact_phone"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:clickable="true"/>

</RelativeLayout>